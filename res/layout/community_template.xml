<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/communityLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white">

    <ImageView
        android:id="@+id/communityThumbImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/mainContentLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:orientation="vertical"
        android:layout_below="@id/communityThumbImg">

        <TextView
            android:id="@+id/communityTitle"
            style="@style/categoryColumnTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2" />

        <View
            android:id="@+id/communityLine"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginTop="10dip"
            android:background="#999999" />

        <TextView
            android:id="@+id/communityTime"
            style="@style/categoryColumnTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip" />
    </LinearLayout>

    <TextView
        android:id="@+id/communityContent"
        style="@style/categoryColumnContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/communityThumbImg"
        android:ellipsize="end"
        android:lines="10" />

</RelativeLayout>