<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:onClick="DetailArticleClick" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white" >

        <ImageView
            android:id="@+id/recommandImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" 
            android:background="@drawable/thumb_default"/>

        <TextView
            android:id="@+id/recommandTitle"
            style="@style/recommandTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:lines="2"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/recommandImg" />

        <View
            android:id="@+id/splitLine"
            android:layout_width="200dip"
            android:layout_height="1dip"
            android:layout_below="@id/recommandTitle"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="30dip"
            android:layout_toRightOf="@+id/recommandImg"
            android:background="#898989" />

        <TextView
            android:id="@+id/recommandTime"
            style="@style/recommandTime"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:layout_below="@id/splitLine"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="10dip"
            android:layout_toRightOf="@+id/recommandImg"
            android:gravity="center" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dip" />

</LinearLayout>